{
	"$schema": "./node_modules/nx/schemas/nx-schema.json",
	"tasksRunnerOptions": {
		"default": {
			"runner": "nx/tasks-runners/default",
			"options": {
				"cacheableOperations": ["build", "test"]
			}
		}
	},
	"targetDefaults": {
		"test": {
			"dependsOn": ["^build"]
		}
	},
	"targetDependencies": {
		"@debrix/internal": ["debrix"],
		"rollup-plugin-debrix": ["@debrix/compiler"],
		"vite-plugin-debrix": ["rollup-plugin-debrix"]
	},
	"defaultBase": "main"
}
