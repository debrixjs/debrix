{
	"name": "@debrixjs/compiler-wasm",
	"version": "0.1.0-0",
	"description": "Wasm version of debrix compiler (debrixc).",
	"keywords": [
		"debrixc",
		"debrix",
		"compiler",
		"wasm"
	],
	"homepage": "https://github.com/debrixjs/compiler/tree/main/packages/compiler-wasm#readme",
	"repository": "https://github.com/debrixjs/compiler",
	"license": "MIT",
	"author": "Elias Skogevall",
	"main": "./index.js",
	"types": "./index.d.ts",
	"files": [
		"./lib/wasm/debrixc_wasm_bg.wasm",
		"./lib/wasm/debrixc_wasm.js",
		"./lib/mod.js",
		"./index.js",
		"./index.d.ts"
	],
	"scripts": {
		"build": "wasm-pack -q build -d lib/wasm -t web --no-typescript && rollup -c",
		"build:release": "wasm-pack -q build -d lib/wasm -t web --no-typescript --release && rollup -c --environment RELEASE",
		"prepublishOnly": "npm run build:release"
	},
	"devDependencies": {
		"rollup": "2.x",
		"rollup-plugin-base64": "1.x",
		"rollup-plugin-terser": "7.x"
	},
	"peerDependencies": {
		"@debrixjs/internal": ">=0.1.0-0"
	}
}
